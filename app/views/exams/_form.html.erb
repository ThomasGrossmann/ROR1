<%= form_with(model: exam, class: "contents") do |form| %>
  <% if exam.errors.any? %>
    <div class="p-2 bg-red-200 border border-red-300 rounded-md">
      <h2 class="text-lg text-red-500"><%= pluralize(exam.errors.count, "error") %> :</h2>
      <ul>
        <% exam.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-5">
    <%= form.label :theme, class: "block" %>
    <%= form.text_field :theme, class: "w-full" %>
  </div>

  <div class="mt-5">
    <%= form.label :date, class: "block" %>
    <%= form.date_field :date, class: "w-full" %>
  </div>

  <div class="mt-5">
    <%= form.label :branch_id, class: "block" %>
    <%= form.collection_select :branch_id, Branch.all, :id, :name, {prompt: "Select a branch"}, class: "w-full" %>
  </div>

  <div class="mt-5">
    <%= form.submit class: button_style('create') %>
  </div>
<% end %>
