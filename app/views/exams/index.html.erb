<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Exams</h1>
    <% if !current_user.student? %>
      <%= link_to "New exam", new_exam_path, class: button_style('create') %>
    <% end %>
  </div>

  <% if @exams.empty? %>
    <p class="text-lg mt-4">Currently no exams</p>
  <% else %>
    <table class="w-full text-left mt-4">
      <thead class="bg-slate-300 text-lg">
        <tr>
          <th class="py-1 px-2">Theme</th>
          <th class="py-1 px-2">Branch</th>
          <th class="py-1 px-2">Actions</th>
        </tr>
      </thead>
      <tbody class="[&>*:nth-child(even)]:bg-slate-200">
        <% @exams.each do |exam| %>
          <%= render exam %>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>