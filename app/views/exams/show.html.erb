<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <%= render @exam %>

    <div class="flex flex-row gap-2 mt-4">
      <%= link_to "Edit this exam", edit_exam_path(@exam), class: button_style('edit') %>
      <%= button_to "Destroy this exam", exam_path(@exam), method: :delete, class: button_style('delete') %>
      <%= link_to "Back to exams", exams_path, class:button_style('back') %>
    </div>
  </div>
</div>
