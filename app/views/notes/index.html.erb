<p style="color: green"><%= notice %></p>

<h1 class="text-2xl">Notes</h1>

<div class="mt-8 space-y-4" id="notes">
  <% @notes.each do |note| %>
    <div class="flex flex-row justify-between">
      <%= render note %>
      <p>
        <%= link_to "Show this note", note %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New note", new_note_path %>
