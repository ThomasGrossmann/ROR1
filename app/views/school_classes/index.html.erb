<div class="w-full">
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">School Classes</h1>
    <% if !current_user.student? %>
      <%= link_to "New school class", new_school_class_path, class: button_style('create') %>
    <% end %>
  </div>

  <table class="w-full text-left mt-4">
    <thead class="bg-slate-300 text-lg">
      <tr>
        <th class="py-1 px-2">Name</th>
        <th class="py-1 px-2">Number of Students</th>
        <th class="py-1 px-2">Responsible Teacher</th>
      </tr>
    </thead>
    <tbody class="[&>*:nth-child(even)]:bg-slate-200">
      <% @school_classes.each do |school_class| %>
        <%= render school_class %>
      <% end %>
    </tbody>
  </table>
</div>