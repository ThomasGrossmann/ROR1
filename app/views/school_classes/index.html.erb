<p style="color: green"><%= notice %></p>

<h1 class="text-2xl">School classes</h1>

<div class="mt-8 space-y-8" id="school_classes">
  <%= link_to "Add a school class", new_school_class_path, class:"rounded-md border border-green-400 p-2 bg-green-200 text-green-600"%>
  <table class="w-full text-left">
    <thead class="bg-slate-300 text-lg">
      <tr>
        <th class="py-1 px-2">Name</th>
        <th class="py-1 px-2">Number of Students</th>
        <th class="py-1 px-2">Responsible Teacher</th>
      </tr>
    </thead>
    <tbody class="[&>*:nth-child(even)]:bg-slate-200">
      <% @school_classes.each do |school_class| %>
        <%= render school_class %>
      <% end %>
    </tbody>
  </table>
</div>
